@import url('https://fonts.googleapis.com/css?family=Oxygen:300,400,700|Playfair+Display|Merriweather:300,400,700|Roboto+Slab');
h1, h2, h3{
    font-family: 'Oxygen', sans-serif;
    font-weight: 400;
}
h1{
    font-size: 50px;
}
a{
    color: #3b3b3b;
    transition-property: color;
    transition-duration: 100ms;
    transition-delay: 20ms;
}
a:hover{
    color: rgba(229, 86, 86, 1);
}
p{
    font-size: 18px;
    font-weight: 300;
    line-height: 37px;
}
pre{
    color:#fff;
}
.article-grid{
    display: grid;
    grid-template-columns: 3fr 1fr;
    padding: 0 1rem;
    font-weight: 300;
}
.article-details{
    text-align: right;
}
.article-topic{
    font-family: 'Oxygen', sans-serif;
    font-weight: 700;
    padding: .5rem;
    border-radius: 10px;
}
.javascript{
    background-color: rgba(240, 219, 79, 1);
}
.node{
    background-color: rgba(144, 197, 63, 1);
}
.python{
    background-color: rgba(55, 106, 150, 1);
    color: #fff;
}
.sql{
    background-color: rgba(229, 86, 86, 1);
    color: #fff;
}
